<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">head_footer_scripts_form.head_footer_scripts_form_data_source</item>
            <item name="deps" xsi:type="string">head_footer_scripts_form.head_footer_scripts_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Alaa\HeadFooterScripts\Block\Adminhtml\Edit\Script\BackButton</item>
            <item name="delete" xsi:type="string">Alaa\HeadFooterScripts\Block\Adminhtml\Edit\Script\DeleteButton</item>
            <item name="save" xsi:type="string">Alaa\HeadFooterScripts\Block\Adminhtml\Edit\Script\SaveButton</item>
            <item name="save_and_continue" xsi:type="string">Alaa\HeadFooterScripts\Block\Adminhtml\Edit\Script\SaveAndContinueButton</item>
        </item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">head_footer_scripts_form</item>
        </item>
    </argument>
    <dataSource name="head_footer_scripts_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Alaa\HeadFooterScripts\Ui\DataProvider\Form\ScriptDataProvider</argument>
            <argument name="name" xsi:type="string">head_footer_scripts_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">script_id</argument>
            <argument name="requestFieldName" xsi:type="string">script_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="head_footer_scripts/script/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">Settings</item>
            </item>
        </argument>
        <field name="script_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Script</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="dataScope" xsi:type="string">script_id</item>
                    <item name="formElement" xsi:type="string">hidden</item>
                </item>
            </argument>
        </field>
        <field name="title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">script</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string">Title</item>
                    <item name="dataScope" xsi:type="string" translate="true">title</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="formElement" xsi:type="string">input</item>
                </item>
            </argument>
        </field>
        <field name="content">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">script</item>
                    <item name="dataType" xsi:type="string">textarea</item>
                    <item name="label" xsi:type="string" translate="true">Content</item>
                    <item name="dataScope" xsi:type="string">content</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="area">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Alaa\HeadFooterScripts\Model\Source\Area</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">script</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Area</item>
                    <item name="dataScope" xsi:type="string">area</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="is_active">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Alaa\HeadFooterScripts\Model\Source\Active</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">script</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Is Active</item>
                    <item name="dataScope" xsi:type="string">is_active</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="pages">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Alaa\HeadFooterScripts\Ui\Component\Listing\Column\Page\Options</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">script</item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="label" xsi:type="string" translate="true">Pages</item>
                    <item name="dataScope" xsi:type="string">pages</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="storeviews">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Cms\Ui\Component\Listing\Column\Cms\Options</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">script</item>
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="label" xsi:type="string" translate="true">Store View</item>
                    <item name="dataScope" xsi:type="string">stores</item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="sort_order">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">script</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Sort Order</item>
                    <item name="dataScope" xsi:type="string">sort_order</item>
                    <item name="formElement" xsi:type="string">input</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
